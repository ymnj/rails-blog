<div class="container">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
			<h1>Edit post</h1>

			<%= flash[:notice] %>

			<% if @post.errors.any? %>
				<h2>Errors:</h2>
				<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
				</ul>
			<% end %>

			<%= form_for @post do |f| %>
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title, class: "form-control" %>	
				</div>
				<div class="form-group">
			    <%= f.label :category_id %>
			    <%= f.collection_select :category_id, Category.order(:title), :id, :title, {prompt: "Select a category"}, {class: "form-control"}%>
			  </div>
				<div class="form-group">
					<%= f.label :body %>
					<%= f.text_area :body, class: "form-control" %>
				</div>
				<%= f.submit %>
			<% end %>


		</div>
	</div>
</div>
