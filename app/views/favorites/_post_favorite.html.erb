<% if user_signed_in? && @post.favorited_by?(current_user) %>
  <%= link_to "Un-favorite", post_favorite_path(@post, @post.favorite_for(current_user)), remote: true, method: :delete %>
<% else %>
  <%= link_to "Favorite", post_favorites_path(@post), class: "icon-big", remote: true, method: :post   %>
<% end %>