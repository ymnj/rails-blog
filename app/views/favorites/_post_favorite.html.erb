<% if user_signed_in? && @post.favorited_by?(current_user) %>
  <%= link_to fa_icon("heart"), post_favorite_path(@post, @post.favorite_for(current_user)), class: "like-fav-icon", remote: true, method: :delete %>
<% else %>
  <%= link_to fa_icon("heart-o"), post_favorites_path(@post), class: "like-fav-icon", class: "icon-big", remote: true, method: :post   %>
<% end %>